<div class="container">
  <div class="row justify-content-center">
    <div class="col-sm-8 pt-5">
      <%= form_tag movies_path, method: :get, class: "d-flex my-3" do %>
        <%= text_field_tag :q,
          params[:q],
          class: "form-control",
          placeholder: "Find a movie"
        %>
        <%= submit_tag "Search", class: "btn btn-primary" %>
      <% end %>
      <div id="movies">
        <% @movies.each do |movie| %>
          <h4><%= movie.title %></h4>
          <p><%= movie.synopsis %></p>
        <% end %>
      </div>
    </div>
  </div>
</div>
